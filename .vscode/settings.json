{
    "files.exclude": {
        "**/.git": true,
        "node_modules": true,
        "dist": true,
        "scripts": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.map": {
            "when": "$(basename).map"
        },
        "backup": true,
        "**/symbols*.json": true
    },
    "editor.formatOnSave": true,
    "tslint.autoFixOnSave": true,
    "files.trimTrailingWhitespace": true,
    "vsicons.presets.angular": false,
