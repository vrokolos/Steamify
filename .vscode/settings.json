{
    "files.exclude": {
        "**/.git": true,
        "node_modules": true,
        "dist": true,
        "scripts": true,
        "**/*.js": { "when": "$(basename).ts" },
        "**/*.map": true,
        "backup": true,
        "**/symbols*.json": true
    },
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true,
    "vsicons.presets.angular": false,
    "[json]": { "editor.formatOnSave": false },
    "[jsonc]": { "editor.formatOnSave": false }
}